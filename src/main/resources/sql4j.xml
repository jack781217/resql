<sql4j>
	<database driver="com.mysql.jdbc.Driver"
		url="jdbc:mysql://localhost/giraf"
		username="root"
		password="" />

	<schema>
		<model name="Student">
			<field name="name" type="string" />
			<field name="age" type="int" />
			<field name="gender" type="enum" values="male,female" />
			<field name="dateOfBirth" type="date" />
			<field name="hasGraduated" type="boolean" />
			<field name="advisor" type="string" sparse="true" />
			
			<field name="transcript" type="Transcript" relation="OneToOne" remote="owner" />
			<field name="school" type="School" relation="ManyToOne" remote="students" />
			<field name="courses" type="Course" relation="ManyToMany" remote="students" />
			<field name="emails" type="Email" relation="OneToMany" remote="owner" />

			<field name="major" type="Major" relation="ManyToMany" />
		</model>
		<model name="School">
			<field name="name" type="string" />
		</model>
		<model name="Course">
			<field name="name" type="string" />
		</model>
		<model name="Email">
			<field name="address" type="string" />
		</model>
		<model name="Transcript">
			<field name="gpa" type="double" />
		</model>
		<model name="Major" autoId="false">
			<field name="name" type="string" />
			<field name="buildings" type="Building" relation="OneToMany" remote="major" />
		</model>
		<model name="Building" autoId="false">
			<field name="name" type="string" />
		</model>
	</schema>
</sql4j>